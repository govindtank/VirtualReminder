<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout03"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/MetroDarkPurple" >

   <LinearLayout 
    android:id="@+id/LinearLayout04"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:weightSum="2">  
    
	<Button
	    android:id="@+id/ButtonMain"
	    android:layout_width="200dip"
	    android:layout_height="100dip"    
	    android:background="@color/MetroGrassGreen"
	    android:text="Main"
	    android:textSize="26sp"
	    android:textStyle="bold"
	    android:layout_gravity="center"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="5dp"
	    android:layout_weight="1"
	    android:onClick="openmainActivity" 
	    android:textColor="#ffffffff"
    />

	<Button
	    android:id="@+id/ButtonNew1"
	    android:layout_width="200dip"
	    android:layout_height="100dip"
	    android:background="@color/MetroOrange"
	    android:text="New"
	    android:textSize="26sp"
	    android:textStyle="bold"
	    android:layout_gravity="center"
	    android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
	    android:onClick="opennewActivity"
	    android:textColor="#ffffffff"
    />
	</LinearLayout>
    
	<ListView 
	    android:id="@+id/listview1" 
	    android:layout_height="wrap_content" 
	    android:layout_width="fill_parent"
	    android:layout_above="@+id/viewforgesture1"
	    android:layout_below="@id/LinearLayout04" >
	    
	</ListView>	
	
	<ImageView 
	    android:id="@+id/viewforgesture1" 
	    android:layout_height="300dip" 
	    android:layout_width="fill_parent"
	    android:layout_alignParentBottom= "true"
	    android:background="@color/MetroLightPurple">	    
	</ImageView>		
   </RelativeLayout>



		

